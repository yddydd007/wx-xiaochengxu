/* 这里写样式 */
.slide swiper {
  height: 400rpx;
}
.slide-image {
  width: 100%;
  height: 100%;
}

.board {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}

.board-item {
  display: flex;
  flex: 1;
  cursor: pointer;
  border: 1rpx solid #eee;
  margin-top: 20rpx;
  padding: 40rpx;
  background-color: orange;
}

.board-item text {
  flex: 1;
}

.board-item image {
  width: 40rpx;
  height: 40rpx;
}
